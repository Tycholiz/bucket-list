.panel-container
  display: flex
  flex-flow: row wrap
  justify-content: center
  align-items: flex-start
  margin: 0 auto

  .panel
    border-radius: 0.75em
    display: inline-block
    position: relative
    width: 350px
    height: 200px
    margin: 0 10px 20px
    background-position: center
    opacity: .95 !important

    &:hover
      opacity: 1 !important

    &__text
      font-weight: 300px
      position: absolute
      color: white
      font-size: 4em
      width: max-content
      top: 2em
      text-decoration: none
