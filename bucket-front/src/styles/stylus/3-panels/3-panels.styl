random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

.panel-container
  display: flex
  flex-flow: row wrap
  justify-content: center
  align-items: flex-start

  .panel
    border-radius: 0.75em
    display: inline-block
    position: relative
    width: 350px
    // width: random(95, 98) + "%"
    height: 200px
    margin: 0 10px 20px
    background-position: center
    float: left

    &__text
      font-weight: 300px
      position: absolute
      color: white
      font-size: 4em
      width: max-content
      top: 2em
      text-decoration: none
